<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".Fragments.CourseActivitiesFragment">

    <LinearLayout
            android:id="@+id/layout_post_activity_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

        <EditText
                android:id="@+id/editText_post_activity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/text_description"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/button_activity_selectAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="@string/text_select_attachment" />

            <Button
                    android:id="@+id/button_post_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:text="@string/text_post" />

        </LinearLayout>

    </LinearLayout>



    <android.support.v7.widget.CardView
            android:id="@+id/card_view_createaddignment"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="4dp">


    <LinearLayout
            android:id="@+id/layout_create_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">



     <ImageView
             android:id="@+id/imageview_profileimage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:src="@mipmap/ic_launcher"/>

        <TextView
                android:id="@+id/textview_create_assignment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create An Assignment"
                android:layout_gravity="center"
                android:gravity="center"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
            android:id="@+id/listView_courseFeed_activities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>