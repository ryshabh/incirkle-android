<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_post_activity_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tvHeader"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add Activity"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/ib_cross"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"/>

    </RelativeLayout>
    <EditText
            android:id="@+id/editText_post_activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/text_description"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/button_activity_selectAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/text_select_attachment" />

        <Button
                android:id="@+id/button_post_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:text="@string/text_post" />

    </LinearLayout>

</LinearLayout>