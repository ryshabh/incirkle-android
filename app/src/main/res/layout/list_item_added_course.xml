<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/card_view"

        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="15dp" >

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TextView
                android:id="@+id/textView_course_code"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/helveticaneue_bold"
                android:textSize="14sp"
                android:text="@string/text_course_code"
                android:gravity="start|center_vertical"/>





        <TextView
                android:id="@+id/textView_course_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_gravity="end"
                android:text="@string/text_course_name"
                android:fontFamily="@font/helveticaneue_bold"
                android:textSize="14sp"
                android:gravity="start|center_vertical"/>

        <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_menu"
                android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Act - 0"
                android:layout_weight="1"
                android:id="@+id/actcount"
                android:gravity="center"
                android:layout_width="0dp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Forum - 0"
                android:id="@+id/forumcount"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/doccount"
                android:text="Doc - 0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/assngcount"
                android:text="Assng - 0"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:fontFamily="@font/helvetica_neue_regular"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:id="@+id/textView_latest_update"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="@string/text_latest_update"
            android:gravity="start|center_vertical"/>

    </LinearLayout>


</android.support.v7.widget.CardView>

</LinearLayout>



